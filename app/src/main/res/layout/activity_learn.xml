<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffa668ae"
    tools:context="com.prasannakc.dissertation.Learn">
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ff8bae9c"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">
    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glucosebtn"
            android:text="GLUCOSE"
            android:layout_below="@+id/heartratebtn"
            android:layout_alignLeft="@+id/heartratebtn"
            android:layout_alignStart="@+id/heartratebtn"
            android:layout_toLeftOf="@+id/temperaturebtn" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heartratebtn"
            android:text="HEART RATE"
            android:layout_alignTop="@+id/bloodpressurebtn"
            android:layout_toLeftOf="@+id/bloodpressurebtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </TableRow>
    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperaturebtn"
            android:text="TEMPERATURE"
            android:layout_below="@+id/heartratebtn"
            android:layout_alignLeft="@+id/bloodpressurebtn"
            android:layout_alignStart="@+id/bloodpressurebtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bloodpressurebtn"
            android:text="BLOOD PRESSURE"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </TableRow>
    </TableLayout>



</RelativeLayout>
